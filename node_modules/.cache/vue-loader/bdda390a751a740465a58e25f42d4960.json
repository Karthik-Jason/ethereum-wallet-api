ch(this.walletConstructor.errorHandler);\n    },\n    switchViewPassword() {\n      this.show = !this.show;\n    }\n  }\n};\n</script>\n<style lang=\"scss\" scoped>\n@import 'HardwarePasswordModal.scss';\n</style>\n"]}]}